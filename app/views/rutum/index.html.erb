<h1>Listing ruta</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Localidad</th>
      <th>Orden</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ruta.each do |rutum| %>
      <tr>
        <td><%= rutum.nombre %></td>
        <td><%= rutum.localidad %></td>
        <td><%= rutum.orden %></td>
        <td><%= link_to 'Show', rutum %></td>
        <td><%= link_to 'Edit', edit_rutum_path(rutum) %></td>
        <td><%= link_to 'Destroy', rutum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

